#!/bin/bash

## This file is part of Whonix.
## Copyright (C) 2012 - 2014 Patrick Schleizer <adrelanos@riseup.net>
## See the file COPYING for copying conditions.

set -x
set -o pipefail

error_handler() {
   echo "
####################
## ERROR detected. #
####################
"

   exit 1
}

trap "error_handler" ERR

mkdir --parents ~/sources

cd ~/sources

## Enable apt-cacher-ng proxy.
if [ "$(type -t maybe_enable_apt_cache)" = "function" ]; then
   maybe_enable_apt_cache
fi

apt-get \
   $apt_timeout_opts \
   $apt_verify_opts \
   $apt_unattended_opts \
   update

for i in $(damngpl --source /var/lib/dpkg/status); do
   apt-get \
      $apt_timeout_opts \
      $apt_verify_opts \
      $apt_unattended_opts \
      --download-only \
      source "$i"
done

## Disable apt-cacher-ng proxy.
unset http_proxy
